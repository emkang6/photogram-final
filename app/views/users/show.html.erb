<dl>
  <dt>Private
  </dt>
    <dd><%= @the_user.private %></dd>

    <dt>Followers</dt>
    <dd>
      <%= @the_user.followers.count %>

      <!--If this page belongs to the current user-->
    
      <% if current_user.id == @the_user.id %>
          <h4>Pending follow requests</h4>
          <ul>
              <% current_user.pending_received_follow_requests.each do |a_request| %>

              <% req_sender = User.find_by(id: a_request.sender_id)%>

              <li><%= req_sender.username %></li>


                <form action="/modify_follow_request/<%=a_request.id %>" method="post">
                  <input name="query_status" value="accepted" type="hidden">
                  <input name="query_recipient_id" value="<%= current_user.id %>" type="hidden">
                  <input name="query_sender_id" value="<%= req_sender.id %>" type="hidden">

                  <button>Accept</button>
                </form>

                <form action="/modify_follow_request/<%=a_request.id %>" method="post">
                  <input name="query_status" value="rejected" type="hidden">
                  <input name="query_recipient_id" value="<%= current_user.id %>" type="hidden">
                  <input name="query_sender_id" value="<%= req_sender.id %>" type="hidden">
              
                  <button>Reject</button>
                </form>

               <% end %>
          </ul>
      <% end %>

      <div>

        <%# if (@the_user.id != current_user.id) && current_user.accepted_sent_follow_requests.exists?(recipient_id: @the_user.id) %>
